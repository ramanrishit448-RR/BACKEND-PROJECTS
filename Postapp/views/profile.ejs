<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Profile</title>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 text-white">
      <div class="w-full flex justify-end p-4">
        <a
          href="/logout"
          class="block w-fit mx-auto px-4 py-2 rounded-md bg-blue-500 hover:bg-blue-600"
          >Logout</a
        >
      </div>
      <h1 class="text-4xl font-bold text-center p-4">
        Welcome <%= user.name %>
      </h1>
      <div class="max-w-xl mx-auto bg-zinc-800 rounded-lg p-6">
        <h5 class="text-lg">You can now create a post</h5>
        <form action="/post" method="post" class="flex flex-col items-center">
          <input
            type="text"
            name="title"
            placeholder="what's on your mind"
            class="w-full border-2 border-black p-2 m-2 rounded-md bg-zinc-800"
          />
          <textarea
            name="content"
            placeholder="Content"
            class="w-full border-2 border-black p-2 m-2 rounded-md bg-zinc-800"
            name="content"
          ></textarea>
          <input
            type="submit"
            value="Create Post"
            class="w-full p-2 m-2 rounded-md bg-blue-500 hover:bg-blue-600 cursor-pointer"
          />
        </form>
        <div class="posts mt-20">
          <h1 class="text-zinc-400 text-2xl font-bold text-center">Posts</h1>
          <div class="postcontainer mt-5 flex flex-wrap justify-center">
            <% user.posts.reverse().forEach(function(post) { %>
            <div
              class="post w-full p-4 m-2 border-2 border-zinc-700 bg-zinc-900 rounded-md"
            >
              <h2 class="text-zinc-400 mb-2 text-lg font-bold">
                <%= post.title %>
              </h2>
              <p class="text-zinc-400 text-sm"><%= post.content %></p>
              <div class="btns flex mt-5 items-center">
                <form action="/post/<%= post._id %>/like" method="post">
                  <button
                    type="submit"
                    class="bg-blue-500 hover:bg-blue-600 m-2 text-white px-4 py-2 rounded-md"
                  >
                    Like (<%= post.likes ? post.likes.length : 0 %>)
                  </button>
                </form>
                <a
                  href="/post/<%= post._id %>/edit"
                  class="bg-yellow-500 hover:bg-yellow-600 m-2 text-white px-4 py-2 rounded-md"
                  >Edit</a
                >
                <form
                  action="/post/<%= post._id %>/delete"
                  method="post"
                  onsubmit="return confirm('Delete this post?');"
                >
                  <button
                    type="submit"
                    class="bg-red-600 hover:bg-red-700 m-2 text-white px-4 py-2 rounded-md"
                  >
                    Delete
                  </button>
                </form>
              </div>
            </div>
            <% }); %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
