<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div
      class="min-h-screen bg-gradient-to-br from-zinc-950 via-zinc-900 to-zinc-800 p-10"
    >
      <div class="max-w-6xl mx-auto backdrop-blur-lg">
        <!-- Header -->
        <div class="flex items-center justify-between mb-10">
          <a
            href="/"
            class="bg-yellow-400 text-black font-semibold px-4 py-2 rounded-xl shadow-md hover:shadow-lg hover:bg-yellow-500 transition-all duration-300"
          >
            ‚Üê Back to Home
          </a>
          <h1
            class="text-4xl font-bold text-white tracking-tight drop-shadow-md"
          >
            All Users
          </h1>
        </div>

        <!-- Users Grid -->
        <div
          class="users grid gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
        >
          <% users.forEach(user => { %>
          <div
            class="user-card bg-white/10 backdrop-blur-md border border-white/10 p-6 rounded-2xl shadow-[inset_1px_1px_0_rgba(255,255,255,0.2),_inset_-1px_-1px_0_rgba(0,0,0,0.3)] hover:shadow-[0_0_15px_rgba(255,255,255,0.2)] hover:scale-[1.03] transition-all duration-300"
          >
            <div class="flex flex-col items-center">
              <img
                src="<%= user.image %>"
                alt="<%= user.name %>"
                class="w-24 h-24 object-cover rounded-full mb-4 border-2 border-yellow-400 shadow-[0_0_10px_rgba(255,204,0,0.5)]"
              />
              <h2
                class="text-xl font-semibold text-white text-center mb-1 tracking-tight"
              >
                <%= user.name %>
              </h2>
              <p class="text-gray-400 text-center text-sm mb-4">
                <%= user.email %>
              </p>

              <div class="flex justify-center gap-6 mt-2">
                <a
                  href="/edit/<%= user._id %>"
                  class="text-blue-400 hover:text-blue-300 font-medium transition"
                  >Edit</a
                >
                <a
                  href="/delete/<%= user._id %>"
                  class="text-red-400 hover:text-red-300 font-medium transition"
                  >Delete</a
                >
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
